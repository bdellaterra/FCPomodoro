{
  "name": "FCPomodoro",
  "version": "0.1.0",
  "description": "Pomodoro Clock",
  "main": "main.js",
  "author": "Brian Dellaterra",
  "license": "LGPL-3.0",
  "os": "!win32",
  "scripts": {
    "mon": "nodemon --watch package.json --watch webpack.config.babel.js --watch conf/webpack --exec npm run dev",
    "dev": "webpack -d && webpack-dev-server --watch-poll",
    "build": "webpack",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "coverage": "cross-env JS_TEST_LIB=ava nyc ava",
    "test": "cross-env JS_TEST_LIB=ava ava --tap",
    "watch": "cross-env JS_TEST_LIB=ava ava --watch"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-regenerator-runtime": "^6.5.0",
    "babel-register": "^6.22.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint_d": "^4.2.1",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "require-dir": "^0.3.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-merge": "^2.6.1"
  },
  "dependencies": {
    "cross-env": "^3.1.4",
    "lodash": "^4.17.4",
    "present": "^1.0.0"
  },
  "ava": {
    "files": [
      "test/*test.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "ignore": "*test.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
